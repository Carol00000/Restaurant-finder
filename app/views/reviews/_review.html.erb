<div class="border-b border-gray-200 pb-4 mb-4 last:border-b-0 last:pb-0 last:mb-0">
  <div class="flex items-center justify-between mb-2">
    <div>
      <span class="font-semibold"><%= review.user.email %></span>
      <span class="text-gray-500 text-sm ml-2"><%= review.created_at.strftime("%B %d, %Y") %></span>
    </div>
    <% if review.user == current_user %>
      <div>
        <%= link_to "Edit", edit_restaurant_review_path(review.restaurant, review), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
        <%= button_to "Delete", restaurant_review_path(review.restaurant, review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" }, class: "text-red-600 hover:text-red-900" %>
      </div>
    <% end %>
  </div>
  <div class="flex items-center mb-2">
    <% review.rating.times do %>
      <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    <% end %>
    <% (5 - review.rating).times do %>
      <svg class="w-5 h-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    <% end %>
  </div>
  <p class="text-gray-700"><%= review.comment %></p>
</div>

